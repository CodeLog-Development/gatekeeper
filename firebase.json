{
  "functions": {
    "predeploy": [
      "nx lint api",
      "nx run api:build:production"
    ],
    "source": "dist/api",
    "runtime": "nodejs20"
  },
  "hosting": {
    "public": "dist/app",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
